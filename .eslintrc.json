{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "@typescript-eslint/semi": [
            "error",
            "always"
        ],
        "eqeqeq": "error",
        "no-restricted-imports": [
            "error"
        ],
        "no-redeclare": "error",
        "keyword-spacing": [
            "error",
            {
                "after": true,
                "overrides": {
                    "if": {
                        "after": false
                    },
                    "for": {
                        "after": false
                    },
                    "switch": {
                        "after": false
                    },
                    "while": {
                        "after": false
                    }
                }
            }
        ],
        "no-trailing-spaces": "error",
        "no-console": "error",
        "no-warning-comments": "warn",
        "eol-last": "error",
        "no-throw-literal": "error",
        "no-cond-assign": "error",
        "@typescript-eslint/explicit-member-accessibility": [
            "error",
            {
                "accessibility": "no-public"
            }
        ]
    }
}